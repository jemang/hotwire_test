<h2 class='mb-4'>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fullname,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'Fullname',
                input_html: { autocomplete: 'fullname', class: 'form-control mt-3' }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'Email',
                input_html: { autocomplete: "email", class: 'form-control mt-3' }%>
    <%= f.input :password,
                required: true,
                label: false,
                placeholder: 'Password',
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: 'form-control mt-3' } %>
    <%= f.input :password_confirmation,
                required: true,
                placeholder: 'Password Confirmation',
                label: false,
                input_html: { autocomplete: "new-password", class: 'form-control my-3' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'button btn btn-primary w-100' %>
  </div>
<% end %>

<hr>

<%= render "devise/shared/links" %>
